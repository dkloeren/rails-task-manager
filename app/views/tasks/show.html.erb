<h1>
  <%= @task.title %>

  <% if @task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
</h1>
<div><p><%= @task.details %></p></div>
<br>
<div><%= link_to "Edit task", edit_task_path(@task) %></div>
<br>
<div><%= link_to "Back to list", tasks_path%></div>

